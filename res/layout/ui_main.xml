<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:weightSum="600" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="800" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="100" >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="200"
                android:background="#F4F4F4"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="40dp" />

            <Button
                android:id="@+id/btn_next"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:text=">"
                android:textSize="40dp"
                android:visibility="gone" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="100"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingTop="5dp" >

            <ScrollView
                android:id="@+id/sv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="100"
                android:background="#FFFFFF"
                android:visibility="visible" >

                <TextView
                    android:id="@+id/tv_log"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="500"
                    android:background="#FFFFFF"
                    android:gravity="bottom"
                    android:scrollbars="vertical"
                    android:text="log"
                    android:textColor="#000000" />

            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100" >

            <TextView
                android:id="@+id/tv1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="20" />

            <TextView
                android:id="@+id/tv_red"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:background="@drawable/gray_light"
                android:gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/gray_light"
                android:includeFontPadding="false"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="15" />

            <TextView
                android:id="@+id/tv_green"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:background="@drawable/green_light"
                android:gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/green_light"
                android:includeFontPadding="false"
                android:textColor="#000000" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="20" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="120"
            android:orientation="horizontal"
            android:weightSum="100" >

            <TextView
                android:id="@+id/textView002"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:gravity="center"
                android:text="Light Times"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/et_red_light"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="40"
                android:ems="10"
                android:hint="Red Light"
                android:inputType="number"
                android:maxLength="7"
                android:textColor="#Ff0000" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/et_green_light"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="40"
                android:ems="10"
                android:hint="Green Light"
                android:inputType="number"
                android:maxLength="7"
                android:textColor="#00FF00" />

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="120"
            android:orientation="horizontal"
            android:weightSum="100" >

            <TextView
                android:id="@+id/textView0002"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:gravity="center"
                android:text="Device Number"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/et_number"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="40"
                android:ems="10"
                android:hint="number"
                android:inputType="number"
                android:maxLength="7"
                android:text="1"
                android:textColor="#000000" >

                <requestFocus />
            </EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="150"
            android:weightSum="100" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:gravity="center"
                android:text="Volume"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5" />

            <Button
                android:id="@+id/btn_min"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:text="Min" />

            <Button
                android:id="@+id/btn_reduce_volume"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:text="-"
                android:textSize="40dp" />

            <TextView
                android:id="@+id/tv_volume"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="40dp" />

            <Button
                android:id="@+id/btn_add_volume"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:text="+"
                android:textSize="40dp" />

            <Button
                android:id="@+id/btn_max"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:text="Max" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="100"
            android:visibility="gone"
            android:weightSum="100" >

            <TextView
                android:id="@+id/textView8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:gravity="center"
                android:text="time"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="80"
                android:gravity="center"
                android:textColor="#000000" />

            <TextClock
                android:id="@+id/dc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:visibility="gone" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="140"
            android:text="Save Settings"
            android:textSize="30dp" />

    </LinearLayout>

</RelativeLayout>